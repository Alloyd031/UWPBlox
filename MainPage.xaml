<Page
    x:Class="UWPBlox.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPBlox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    mc:Ignorable="d"
    muxc:BackdropMaterial.ApplyToRootOrPageBackground="True"
    Loaded="Page_Loaded">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button
					x:Name="BackButton"
					AutomationProperties.Name="Back"
					Background="Transparent"
					BorderBrush="Transparent"
                    Height="40"
                    Width="40"
                    Style="{StaticResource NavigationBackButtonNormalStyle}"
                    IsEnabled="{x:Bind ContentFrame.CanGoBack, Mode=OneWay}"
					Click="BackButton_Click"
					ToolTipService.ToolTip="Back">
        </Button>
        <Grid x:Name="AppTitleBar"
              Background="Transparent" Height="40" Margin="40,0,0,0">
            <Image Source="/Assets/StoreLogo.png"
                   Width="25"
                   Height="25" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <TextBlock
                       x:Name="AppTitle"
                       Text="UWPBlox" FontSize="20" HorizontalAlignment="Left"
                       Style="{StaticResource CaptionTextBlockStyle}"
                       VerticalAlignment="Center" Margin="45,0,0,0"/>
        </Grid>
        <Grid x:FieldModifier="public" x:Name="PagesPanel" Grid.Row="1" Width="64" Grid.RowSpan="3" HorizontalAlignment="Left">
            <Button x:Name="HomeButton" Height="44" Width="44" Margin="0,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Background="Transparent" BorderBrush="Transparent" Click="HomeButton_Click" ToolTipService.ToolTip="Home">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE10F;"/>
            </Button>
            <Button x:Name="DiscoverButton" Height="44" Width="44" Margin="0,59,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Background="Transparent" BorderBrush="Transparent" Click="DiscoverButton_Click" ToolTipService.ToolTip="Discover">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE102;"/>
            </Button>
            <Button x:Name="AvatarButton" Height="44" Width="44" Margin="0,108,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Background="Transparent" BorderBrush="Transparent" Click="AvatarButton_Click" ToolTipService.ToolTip="Avatar">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE13D;"/>
            </Button>
            <Button x:Name="ConnectButton" Height="44" Width="44" Margin="0,157,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Background="Transparent" BorderBrush="Transparent" Click="ConnectButton_Click" ToolTipService.ToolTip="Connect">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE15F;"/>
            </Button>
            <Button x:Name="MoreButton" Height="44" Width="44" Margin="0,206,0,0" VerticalAlignment="Top" HorizontalAlignment="Center"
                    Background="Transparent" BorderBrush="Transparent" Click="MoreButton_Click" ToolTipService.ToolTip="More">
                <FontIcon FontFamily="Segoe Fluent Icons" Glyph="&#xE10C;"/>
            </Button>
        </Grid>
        <Frame x:Name="ContentFrame" Grid.Row="2" Grid.RowSpan="2" Margin="64,0,0,0" />
    </Grid>
</Page>
